<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dhina.myapplication.profile">

    <TextView
        android:id="@+id/Profile"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="36dp"
        android:text="Profile"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#dd744b"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="54dp"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#363835"
        android:layout_below="@+id/Profile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text=""

        android:textSize="20dp"
        android:textColor="#49549b"
        android:layout_alignBaseline="@+id/Name"
        android:layout_alignBottom="@+id/Name"
        android:layout_toRightOf="@+id/Number"
        android:layout_toEndOf="@+id/Number"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/Number"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:text="Number"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#363835"
        android:layout_below="@+id/Name"
        android:layout_alignLeft="@+id/Name"
        android:layout_alignStart="@+id/Name" />

    <TextView
        android:id="@+id/number"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textColor="#49549b"
        android:layout_alignBottom="@+id/Number"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:text="" />

    <TextView
        android:id="@+id/Location"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textColor="#363835"
        android:layout_marginTop="62dp"
        android:text="Location"
        android:textStyle="bold"
        android:layout_below="@+id/Number"
        android:layout_alignLeft="@+id/Name"
        android:layout_alignStart="@+id/Name" />

    <TextView
        android:id="@+id/location"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textColor="#49549b"
        android:layout_alignLeft="@+id/number"
        android:layout_alignStart="@+id/number"
        android:layout_alignTop="@+id/Location"
        android:text="" />

    <TextView
        android:id="@+id/Blood"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="70dp"
        android:text="Blood"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#363835"
        android:layout_below="@+id/Location"
        android:layout_alignLeft="@+id/Location"
        android:layout_alignStart="@+id/Location" />

    <TextView
        android:id="@+id/blood"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textColor="#49549b"
        android:layout_alignBottom="@+id/Blood"
        android:layout_alignLeft="@+id/location"
        android:layout_alignStart="@+id/location"
        android:text="" />


</RelativeLayout>
